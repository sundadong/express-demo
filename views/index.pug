extends layout

block content
  h1= title
  div(id="login-form" class="form login-form")
    input(id="username" class="form-control" type="text" name="username")
    button(id="btn-login" class="btn btn-primary") Login
  div(id="chat-container" class="chat-container")
  div(id="msg-form" class="form msg-form")
    textarea(id="msg-text" class="form-control")
    button(id="btn-send" class="btn btn-primary") Send
  script(src="javascripts/index.js?v="+version)
